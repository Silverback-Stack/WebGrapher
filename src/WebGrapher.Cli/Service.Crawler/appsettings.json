{
    "Crawler": {
        "ServiceName": "Crawler",
        "MaxCrawlAttemptLimit": 3,
        "MaxCrawlDepthLimit": 3,
        "ScheduleCrawlDelayMinSeconds": 1,
        "ScheduleCrawlDelayMaxSeconds": 3,

        "SitePolicy": {
            "UserAccepts": "text/plain, text/html",
            "AbsoluteExpiryMinutes": 20
        }
    },

    "MetaCache": {
        "CacheType": "InMemory" //InMemory|Redis 
    },

    "BlobCache": {
        "CacheType": "InStorage", //InStorage|AzureBlobStorage
        "InStorage": {
            "ContainerName": "storage.cache",
            "AbsoluteExpiryHours": 0 //purges on startup
        }
    },

    "PolicyCache": {
        "CacheType": "InMemory" //InMemory|Redis
    },

    "RequestSender": {
        "RetryAfterFallbackMinutes": 5,
        "MinAbsoluteExpiryMinutes": 5,
        "MaxAbsoluteExpiryMinutes": 20
    }
}