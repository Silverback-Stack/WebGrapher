{
    "Graphing": {
        "ServiceName": "Graphing",
        "MaxRequestDepthLimit": 3,
        "MaxRequestNodeLimit": 5000,
        "ScheduleCrawlDelayMinSeconds": 1,
        "ScheduleCrawlDelayMaxSeconds": 3,

        "WebGraph": {
            "WebGraphType": "InMemory", //InMemory|AzureCosmosGremlin
            "AzureCosmosGremlin": {
                "Hostname": "example.gremlin.cosmos.azure.com", //Gremlin endpoint 
                "Port": 443,
                "EnableSsl": true,
                "PrimaryKey": "[PRIMARY-KEY]",
                "Database": "ExampleDb",
                "Graph": "ExampleGraph"
            },

            "ScheduleCrawlThrottleSeconds": 60,
            "NodeEdgesUpdateMode": "Append", //Append|Replace

            "SigmaJsGraph": {
                "MinNodeSize": 10,
                "MaxNodeSize": 60
            }
        }
    },

    "WebApi": {
        "Host": "http://localhost:5000",
        "SwaggerEndpointUrl": "/swagger/v1/swagger.json",
        "SwaggerEndpointName": "Grapher API V1",
        "SwaggerRoutePrefix": "swagger"
    }
}