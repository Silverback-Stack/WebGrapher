{
    "Normalisation": {
        "ServiceName": "Normalisation",
        "MaxTitleLength": 100,
        "MaxSummaryWords": 100,
        "MaxKeywords": 300,
        "MaxKeywordTags": 10,
        "MaxLinksPerPage": 100,

        "AllowableLinkSchemas": [
            "http",
            "https"
        ],

        "Processors": {
            "TitleXPath": ".//title",
            "LinksXPath": ".//a[@href]",
            "DefaultLanguageIso2Code": "en",
            "DefaultLanguageIso3Code": "eng"
        }
    },

    "BlobCache": {
        "CacheType": "InStorage", //InStorage|AzureBlobStorage
        "InStorage": {
            "ContainerName": "storage.cache",
            "AbsoluteExpiryHours": 0 //clears all on startup
        }
    }
}