{
    "Scraper": {
        "ServiceName": "Scraper",
        "ContentMaxBytes": 4194304 //4 Mb
    },

    "MetaCache": {
        "CacheType": "InMemory", //InMemory|Redis
        "Redis": {
            "ConnectionString": ""
        }
    },

    "BlobCache": {
        "CacheType": "InStorage", //InStorage|AzureBlobStorage
        "InStorage": {
            "ContainerName": "storage.cache",
            "AbsoluteExpiryHours": 0 //0 exires all cached files on startup
        }
    },

    "RequestSender": {
        "RetryAfterFallbackMinutes": 5,
        "MinAbsoluteExpiryMinutes": 5,
        "MaxAbsoluteExpiryMinutes": 20
    }
}