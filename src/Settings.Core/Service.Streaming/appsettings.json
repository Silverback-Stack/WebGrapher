{
  "Streaming": {
    "ServiceName": "Streaming",

    "SignalR": {
      "HubPath": "/graphstreamerhub",
      "Provider": "HostedSignalR", //HostedSignalR|AzureSignalRDefault|AzureSignalRServerless

      "HostedSignalR": {
        "Host": "https://localhost:5100"
      },

      "AzureSignalRDefault": {
        "ConnectionString": "",
        "Endpoint": ""
      },

      "AzureSignalRServerless": {
        "ConnectionString": "",
        "Endpoint": ""
      }
    }
  },

  "StreamingWebApi": {
    "Host": "https://localhost:5100",

    "AllowedOrigins": [
      // Domains allowed to make requests to the API
      "https://webgrapher.demo"
    ],

    "Swagger": {
      "EndpointUrl": "/swagger/v1/swagger.json",
      "EndpointName": "Grapher API V1",
      "RoutePrefix": "swagger"
    }
  }
}